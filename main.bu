site_pages =index
pandoc =eval ~/.cabal/bin/pandoc
template =site/template.html

site:
  cp README.md site/index.md
  for p in $site_pages; do
    echo  site/${p}.md
    $pandoc --template=$template -i site/${p}.md -o site/${p}.html
  done

site_serve: site
  echo "$0"
